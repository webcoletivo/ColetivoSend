// Database
DATABASE_URL="postgres://user:password@host:port/dbname?sslmode=disable"

// NextAuth
NEXTAUTH_URL="YOUR_NEXTAUTH_URL"
NEXTAUTH_SECRET="YOUR_NEXTAUTH_SECRET"

// Google OAuth (optional)
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"

// Email (SMTP)
SMTP_HOST="YOUR_SMTP_HOST"
SMTP_PORT="YOUR_SMTP_PORT"
SMTP_USER="YOUR_SMTP_USER"
SMTP_PASSWORD="YOUR_SMTP_PASSWORD"
SMTP_FROM="YOUR_SMTP_FROM"

// Storage (S3)
STORAGE_TYPE="your_storage_type"                    # "local" or "s3"
AWS_REGION="your_aws_region"        # "us-east-1" or "us-east-2"
AWS_S3_BUCKET="your_s3_bucket"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_ENDPOINT=""                    # Optional: for S3-compatible services (R2, MinIO)

// App settings
UPLOAD_MAX_SIZE_MB="10240"
UPLOAD_MAX_FILES="2000"
GUEST_MAX_TRANSFERS="5"
GUEST_MAX_SIZE_MB="50"
GUEST_MAX_FILES="10"

// Upload Configuration (Chunked Upload)
UPLOAD_CHUNK_SIZE_MB="5"
UPLOAD_MAX_CONCURRENT_CHUNKS="3"
UPLOAD_SESSION_EXPIRY_HOURS="24"
UPLOAD_MAX_RETRIES="3"

// Public Upload Configuration (for frontend)
NEXT_PUBLIC_UPLOAD_MAX_SIZE_MB="10240"
NEXT_PUBLIC_UPLOAD_MAX_FILES="2000"
NEXT_PUBLIC_UPLOAD_CHUNK_SIZE_MB="5"
NEXT_PUBLIC_UPLOAD_MAX_CONCURRENT_CHUNKS="3"
NEXT_PUBLIC_UPLOAD_MAX_RETRIES="3"
